{
  "compilerOptions": {
    "target": "es5" ,
    "module": "commonjs" ,
    "outDir": "./build",
    "rootDir": "./src", 
    "strict": true ,
    "baseUrl": "./src",
    "types": [ "jest"],
    "typeRoots": ["src/types", "./node_modules/@types"],
    "esModuleInterop": true ,
    "skipLibCheck": true ,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}